body {
    font-family: 'Roboto', sans-serif;
    background-color: #f8f9fa;
}

.card {
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    border: none;
    border-radius: 10px;
    overflow: hidden;
}

.card-header {
    padding: 1rem 1.5rem;
}

.list-group-item {
    border-left: none;
    border-right: none;
    padding: 1rem 1.5rem;
}

.list-group-item:first-child {
    border-top: none;
}

.list-group-item:last-child {
    border-bottom: none;
}

.badge {
    font-size: 0.9rem;
    padding: 0.5em 0.75em;
}